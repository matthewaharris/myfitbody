# =============================================
# MyFitBody Backend Environment Variables
# =============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!
# =============================================

# =============================================
# SUPABASE (Database)
# =============================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
# Service role key - bypasses RLS (use for backend only, never expose to frontend!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================
# EXTERNAL APIs
# =============================================
# OpenAI - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# USDA FoodData Central - Get from: https://fdc.nal.usda.gov/api-key-signup.html
USDA_API_KEY=your-usda-api-key-here

# =============================================
# SERVER CONFIGURATION
# =============================================
PORT=3000
NODE_ENV=development

# =============================================
# ADMIN DASHBOARD
# =============================================
# Secret key for JWT signing (generate a random string)
ADMIN_SECRET=your-random-secret-key-change-in-production

# Admin login credentials
ADMIN_EMAIL=admin@myfitbody.app

# To generate password hash, run:
# node -e "console.log(require('crypto').createHash('sha256').update('yourpassword').digest('hex'))"
ADMIN_PASSWORD_HASH=your-password-hash-here
